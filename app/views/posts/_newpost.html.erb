<%= form_with(model: @post, local: true, method: :post, html: { multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, "Upload an image" %>
    <br>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "Submit", class:'btn btn-primary' %>
<% end %>